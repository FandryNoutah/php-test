<style>
    h1{
        text-align: center;
    }
    table, th, td{
        border: 1px solid black;
        border-collapse: collapse;
        padding: 5px;
    }
</style>
    <h1>Student list</h1>
    <p>Export date: {{ exportTime | date('d-m-Y') }} at {{ exportTime | date('H:i') }}</p>
    <table style="width: 100%;">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Promotion</th>
                <th>Gender</th>
                <th>Birthdate</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
                <tr>
                    <td>{{ student.Firstname }}</td>
                    <td>{{ student.Lastname }}</td>
                    <td>{{ student.Promotion }}</td>
                    <td>{{ student.Gender }}</td>
                    <td>{{ student.Birthdate | date('d/m/Y') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>